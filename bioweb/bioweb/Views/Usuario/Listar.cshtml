@model List<bioweb.Models.ViewModels.UsuarioViewModel>
@{
    ViewBag.Title = "USUARIOS SISTEMA";
}

<div class="container-fluid">
    <div class="table-responsive">
        <h4 class="row justify-content-center align-items-center  mb-4 mt-4 text-dark">@ViewBag.Title</h4>
        <form action="UsuarioBO" id="frmUsuarioSistema" method="post">

            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID_USUARIO</th>
                        <th scope="col">NOMBRE</th>
                        <th scope="col">ROL</th>
                        <th scope="col">DOCUMENTO</th>
                        <th scope="col">#</th>
                        <th scope="col">DIRECCIÓN</th>
                        <th scope="col">TÉLEFONO</th>
                        <th scope="col">CORREO</th>
                        <th scope="col">LOGUIN</th>
                        <th scope="col">CLAVE</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <!--ID-->
                            <td>
                                <a href="~/Usuario/Actualizar?idUsuario=@usuario.idUsuario" class="btn btn-warning btn-sm mr-1">EDITAR <i class="fas fa-pencil-alt"></i></a>@usuario.idUsuario
                            </td>

                            <!--Nombre-->
                            <td>
                                @usuario.nombre
                            </td>

                            <!--Tipo de usuario-->
                            <td>
                                @usuario.tipoUsuario
                            </td>

                            <!--Tipo documento-->
                            <td>
                                @usuario.tipoDocumento
                            </td>

                            <!--Numero documento--->
                            <td>
                                @usuario.numeroDocumento
                            </td>

                            <!--Direcci�n-->
                            <td>
                                @usuario.direccion
                            </td>

                            <!--Tel�fono-->
                            <td>
                                @usuario.telefono
                            </td>

                            <!--Correo-->
                            <td>
                                @usuario.correo
                            </td>

                            <!--Loguin-->
                            <td>
                                @usuario.loguin
                            </td>

                            <!--Clave-->
                            <td>
                                @usuario.clave
                            </td>
                        </tr>
                    }


                </tbody>
                <tfoot>
                    <tr>
                        <th scope="col">ID_USUARIO</th>
                        <th scope="col">NOMBRE</th>
                        <th scope="col">ROL</th>
                        <th scope="col">DOCUMENTO</th>
                        <th scope="col">#</th>
                        <th scope="col">DIRECCIÓN</th>
                        <th scope="col">TÉLEFONO</th>
                        <th scope="col">CORREO</th>
                        <th scope="col">LOGUIN</th>
                        <th scope="col">CLAVE</th>
                    </tr>
                </tfoot>
            </table>

        </form>
    </div>
</div>

