@model List<bioweb.Models.ViewModels.EmpleadoViewModel>


@{
    ViewBag.Title = "LISTA EMPLEADOS";
}


<div class="table-responsive">
    <h4 class="row justify-content-center align-items-center mb-4 mt-4 text-dark">LISTA EMPLEADOS</h4>
    <form action="" method="post">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">ID_EMPLEADO</th>
                    <th scope="col">NOMBRE_EMPLEADO</th>
                    <th scope="col">DOCUMENTO</th>
                    <th scope="col">#</th>
                    <th scope="col">DIRECCIÓN</th>
                    <th scope="col">TELÉFONO</th>
                    <th scope="col">CORREO</th>
                    <th scope="col">NOMBRE_CONTACTO</th>
                    <th scope="col">TELÉFONO_CONTACTO</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empleado in Model)
                {
                    <tr>



                        <td>
                            <a href="~/Empleado/Actualizar?idempleado=@empleado.idPersona" class="btn btn-warning btn-sm mr-1">EDITAR <i class="fas fa-pencil-alt"></i></a>@empleado.idPersona
                        </td>

                        <td>
                            @empleado.nombre
                        </td>

                        <td>
                            @empleado.tipoDocumento
                        </td>

                        <td>
                            @empleado.numeroDocumento
                        </td>

                        <td>
                            @empleado.direccion
                        </td>

                        <td>
                            @empleado.telefono
                        </td>

                        <td>
                            @empleado.correo
                        </td>

                        <td>
                            @empleado.nombreContacto
                        </td>

                        <td>
                            @empleado.telefonoContacto
                        </td>

                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th scope="col">ID_EMPLEADO</th>
                    <th scope="col">NOMBRE_EMPLEADO</th>
                    <th scope="col">DOCUMENTO</th>
                    <th scope="col">#</th>
                    <th scope="col">DIRECCIÓN</th>
                    <th scope="col">TELÉFONO</th>
                    <th scope="col">CORREO</th>
                    <th scope="col">NOMBRE_CONTACTO</th>
                    <th scope="col">TELÉFONO_CONTACTO</th>
                </tr>
            </tfoot>
        </table>

    </form>

</div>
